import AsDithered from '../components/as-dithered/AsDithered.astro';
import projectCard from '../assets/project-card.png';
---
<html>
      <Head/>
  <body>
    <header class="menubar"> <a href="/" style="text-decoration: none;">finnh.ca</a> <nav style="display: flex; justify-content: right; gap: 50px;"><a>Projects</a> <a>writing</a></nav> </header>
    <main>
    <section class="hero block">
      <div class="hero-text">
      <h1><i>Hey, it's Finn</i></h1>
      <p>I'm an organically grown massive ▓▓▓▓ nerd from Canada. I make thing for fun, fortune, and financial ruin. Check out some of by projects below, read my ramblings, and if you want get in touch!</p>
      </div>
      <div class="hero-media"><Image class="hero-img" src={import('../assets/hero-dith.png')} alt="AAAAAA"/></div>
    </section>
    <Seperator value="13"/>
    <section class="projects block">
      <aside>
        <h2>Projects</h2>
        <p>Here's what I've worked on recently, maybe some of it is interesting?</p>
      </aside>
        <ul class="project-grid"> 
          <li>
          <article>
            <div class="dithimg">
              
              <Image src={projectCard} alt="Project One" width={400}/>
              <AsDithered src={projectCard.src} alt="Project One"/>
            </div>
            
