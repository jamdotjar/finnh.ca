---
import Seperator from '../components/Seperator.astro';
import Layout from './Layout.astro'
interface Props {
    title: string;
    date: Date;
    description?: string;
    tags?: string[];
}

const { title, date, description, tags } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

//hash date into a random value 0, 100

const random = Array.from(title + date.toString()).reduce((acc, char) => acc + char.charCodeAt(0), 0) % 100;
---
<Layout title={title} description={description}>

<nav><a href="/"><i class="hn hn-home-solid"></i></a></nav>

<article>
    <header>
        <h1>{title}</h1>   
        <div class="meta">
            <time datetime={date.toLocaleDateString()}>{formattedDate}</time>
            {tags && tags.length > 0 && (
                <div class="tags">
                    {tags.map(tag => <span class="tag">[{tag}]</span>)}
                </div>
            )}
        </div>
    </header>

    <Seperator value={random}/>
    <hr/>
    
    <div class="content">
        <slot />
    </div>
</article>
</Layout>   

<style>
    article {
        max-width: 700px;
        margin: 0 auto;
        padding: 2rem 1rem;
        font-family: var(--font-sans);
    }

    header {
        flex-direction: row;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    :global(.seperator) {
        margin-bottom: 1rem;
    }

    nav {
        font-size: 1.5rem;
        color: var(--color-text-muted);
        position: fixed;
        top: 1rem;
        left: 1rem;
        cursor: pointer;
        transition: color 0.2s;
        z-index: 100;
        text-decoration: none;
    }

    nav:hover {
        color: var(--color-text);
    }

    hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin-bottom: 3rem;
    }

    h1 {
        font-size: 2.5rem;
        font-family: var(--font-title);
        font-weight: 200;
        height: fit-content;
    }

    .meta {
        display: flex;
        flex-direction: row;
        gap: 0.75rem;
        color: var(--color-text-muted);
        font-size: 0.9rem;
        background-color: var(--color-surface);
        outline: 1px solid var(--color-border);
        padding: 0.5rem 0.5rem;
        width: fit-content;
        justify-content: center;
        align-items: center;
        align-self: stretch;
    }

    time {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        height: fit-content
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        height: fit-content;
    }

    .tag {
        font-family: var(--font-mono);
        font-size: 0.8rem;
    }

    .content {
        line-height: 1.45;
    }

    .content :global(p) {
        margin-bottom: 1.25rem;
        font-family: var(--font-sans);
    }

    .content :global(h2) {
        font-size: 1.75rem;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
    }

    .content :global(h3) {
        font-size: 1.375rem;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .content :global(img) {
        max-width: 100%;
        height: auto;
        margin: 2rem 0;
        border: 1px solid var(--color-border);
    }

    .content :global(code) {
        font-family: var(--font-mono);
        font-size: 0.875em;
        background: var(--color-surface);
        padding: 0.2em 0.4em;
        border-radius: 2px;
        border: 1px solid var(--color-border);
    }

    .content :global(pre) {
        background: var(--color-surface);
        padding: 1rem;
        border: 1px solid var(--color-border);
        border-radius: 2px;
        overflow-x: auto;
        margin: 1.5rem 0;
    }

    .content :global(pre code) {
        background: none;
        padding: 0;
        border: none;
    }

    .content :global(a) {
        text-decoration: underline;
        text-decoration-color: var(--color-text-muted);
        transition: text-decoration-color 0.2s;
    }

    .content :global(a:hover) {
        text-decoration-color: var(--color-text);
    }

    @media (max-width: 800px) {
        article {
            padding: 1.5rem 1rem;
        }

        h1 {
            font-size: 2rem;
        }
    }

    
</style>